# Dockerfile.octane
FROM php:8.4-cli

# ğŸ‘· Instale dependÃªncias bÃ¡sicas
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libjpeg-dev \
    libfreetype6-dev \
    && apt-get clean

# ğŸ”§ Instale extensÃµes necessÃ¡rias
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install \
    pdo_mysql \
    mbstring \
    bcmath \
    gd \
    sockets \
    zip \
    pcntl

# ğŸŒ€ Instale Swoole para Octane
RUN pecl install swoole && docker-php-ext-enable swoole

# ğŸ¼ Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /var/www
COPY . .

# âš™ï¸ Starta o Octane
CMD ["php", "artisan", "octane:start", "--server=swoole", "--host=0.0.0.0", "--port=8000"]
