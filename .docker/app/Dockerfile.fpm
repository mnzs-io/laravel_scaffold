# ğŸ˜ BASE: Imagem PHP com FPM
FROM php:8.4-fpm

# ğŸ‘¤ USUÃRIO: Cria o usuÃ¡rio 'sail' com UID 1000 e adiciona a grupos necessÃ¡rios
RUN useradd -G www-data,root -u 1000 -d /home/sail sail

# ğŸ§° SISTEMA: Instala dependÃªncias do sistema operacional
RUN apt-get update && apt-get install -y \
    git \
    curl \
    zip \
    unzip \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libpq-dev \
    libjpeg-dev \
    libfreetype6-dev \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ğŸ§© PHP: Instala e configura extensÃµes necessÃ¡rias
RUN docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-install \
    pdo_mysql \
    pdo_pgsql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    gd \
    sockets \
    zip

# ğŸ XDEBUG: Instala e habilita Xdebug
RUN pecl install xdebug && docker-php-ext-enable xdebug

# ğŸ§¾ XDEBUG CONFIG: Copia a config personalizada
COPY ./xdebug.ini /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
RUN chown -R sail:sail /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
COPY ./php.ini /usr/local/etc/php/

# ğŸ¼ COMPOSER: Copia o Composer da imagem oficial
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ğŸ—ƒï¸ PERMISSÃ•ES: Prepara diretÃ³rios para o usuÃ¡rio 'sail'
RUN mkdir -p /home/sail/.composer && \
    chown -R sail:sail /home/sail

# âš™ï¸ PHP-FPM: Altera o usuÃ¡rio do FPM de 'www-data' para 'sail'
RUN sed -i "s/user = www-data/user = sail/" /usr/local/etc/php-fpm.d/www.conf && \
    sed -i "s/group = www-data/group = sail/" /usr/local/etc/php-fpm.d/www.conf && \
    sed -i "s/;listen.owner = www-data/listen.owner = sail/" /usr/local/etc/php-fpm.d/www.conf && \
    sed -i "s/;listen.group = www-data/listen.group = sail/" /usr/local/etc/php-fpm.d/www.conf

# ğŸ“ WORKDIR: Define o diretÃ³rio de trabalho no projeto Laravel
WORKDIR /var/www/public

# ğŸ“‚ DIRETÃ“RIOS: Cria e ajusta permissÃµes dos diretÃ³rios de cache e storage do Laravel
RUN mkdir -p /var/www/storage /var/www/bootstrap/cache && \
    chown -R sail:sail /var/www/storage /var/www/bootstrap/cache /var/www/public && \
    chmod -R 775 /var/www/storage /var/www/bootstrap/cache /var/www/public

# ğŸ‘¤ USUÃRIO: Alterna para o usuÃ¡rio 'sail'
USER sail

# ğŸš€ START: Comando padrÃ£o de inicializaÃ§Ã£o
CMD ["php-fpm"]
